<Window x:Class="Infrastruktura.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rgn="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" rgn:RegionManager.RegionName="RibbonRegion"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"></ContentControl>
        
        <ContentControl Grid.Row="1" rgn:RegionManager.RegionName="MainRegion"
                        HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                        VerticalAlignment="Stretch" VerticalContentAlignment="Stretch"></ContentControl>
    </Grid>
</Window>